{
  "name": "@hiisi/viola-default-lints",
  "version": "0.1.2",
  "exports": {
    ".": "./mod.ts"
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*_test.ts"
    ]
  },
  "imports": {
    "@hiisi/viola": "jsr:@hiisi/viola@^0.1",
    "@hiisi/flash-freeze": "jsr:@hiisi/flash-freeze@^0.1",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/fs/walk": "jsr:@std/fs@^1/walk",
    "@std/path": "jsr:@std/path@^1"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "tasks": {
    "check": "deno check mod.ts",
    "test": "deno test src/"
  }
}
